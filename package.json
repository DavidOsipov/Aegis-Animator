{
  "name": "aegis-animator",
  "version": "1.0.0",
  "private": false,
  "description": "A security-first, lifecycle-aware animation and DOM utility library for modern web applications.",
  "author": "David Osipov <personal@david-osipov.vision>",
  "license": "MIT",
  "homepage": "https://github.com/your-username/aegis-animator",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/aegis-animator.git"
  },
  "keywords": [
    "animation",
    "web-animations",
    "dom",
    "security",
    "typescript",
    "lifecycle",
    "spa",
    "astro",
    "resilient"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --sourcemap",
    "dev": "tsup src/index.ts --format esm,cjs --dts --sourcemap --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --check .",
    "check": "npm run lint && npm run format",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@david-osipov/security-kit": "^1.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-security": "^2.1.1",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
    "@playwright/test": "^1.55.1",
    "http-server": "^14.1.1"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
